<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Add a New Restaurant</h1>

      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name, placeholder: "La Bella Italia" %>
        <%= f.input :address, placeholder: "123 Main Street, City" %>
        <%= f.input :phone_number, placeholder: "+1 234 567 8900" %>
        <%= f.input :category,
                    collection: ["chinese", "italian", "japanese", "french", "belgian"],
                    prompt: "Select a category" %>
        <%= f.submit "Create Restaurant", class: "btn btn-primary" %>
      <% end %>

      <%= link_to "Back to list", restaurants_path, class: "btn btn-link" %>
    </div>
  </div>
</div>
